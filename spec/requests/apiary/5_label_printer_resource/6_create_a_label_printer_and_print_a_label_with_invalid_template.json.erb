require 'json'
require 'base64'

# This step (request) is creating a label printer
template = File.open(File.join('label_templates', 'tube_label_template.txt')) { |f| f.read }
content = Base64.encode64(template).gsub(/\n/, '') # encodes then strips new line

template_header = File.open(File.join('label_templates', 'tube_header_template.txt')) { |f| f.read }
header = Base64.encode64(template_header).gsub(/\n/, '') # encodes then strips new line

template_footer = File.open(File.join('label_templates', 'tube_footer_template.txt')) { |f| f.read }
